<h1>Available articles</h1>

<% @articles.each do |article| %>
  <p><%= article.title %><p>
  <p><%= link_to 'Show article', article_path(article) %></p>
  <p><%= link_to 'Edit', edit_article_path(article) %></p>
  <br>
<% end %>

<% if can? :create, Article %> 
  <%= link_to "New article", new_article_path %>
<% end %>

